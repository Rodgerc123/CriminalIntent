<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title (top-left), constrained to Solved on the right -->
    <EditText
        android:id="@+id/crimeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/crime_title_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/crimeSolved"
        android:layout_marginEnd="8dp"/>

    <!-- Solved (top-right) -->
    <CheckBox
        android:id="@+id/crimeSolved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crime_solved_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date button (shows date + time; opens a chooser for Date/Time pickers) -->
    <Button
        android:id="@+id/crimeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_date_label"
        app:layout_constraintTop_toBottomOf="@id/crimeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Share report -->
    <Button
        android:id="@+id/share_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_report_text"
        app:layout_constraintTop_toBottomOf="@id/crimeDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Choose suspect -->
    <Button
        android:id="@+id/choose_suspect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_suspect_text"
        app:layout_constraintTop_toBottomOf="@id/share_report"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Call suspect -->
    <Button
        android:id="@+id/call_suspect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/call_suspect"
        app:layout_constraintTop_toBottomOf="@id/choose_suspect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Take photo -->
    <Button
        android:id="@+id/take_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        app:layout_constraintTop_toBottomOf="@id/call_suspect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Photo preview -->
    <ImageView
        android:id="@+id/crime_photo"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/crime_photo_content_desc"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/take_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:background="?attr/colorSurfaceVariant"/>

</androidx.constraintlayout.widget.ConstraintLayout>