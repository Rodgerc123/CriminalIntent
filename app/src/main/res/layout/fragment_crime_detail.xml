<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <EditText
        android:id="@+id/crimeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Crime title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date (disabled for now) -->
    <Button
        android:id="@+id/crimeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/crimeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Solved -->
    <CheckBox
        android:id="@+id/crimeSolved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solved"
        app:layout_constraintTop_toBottomOf="@id/crimeDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Share report -->
    <Button
        android:id="@+id/share_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_crime_report"
        app:layout_constraintTop_toBottomOf="@id/crimeSolved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Choose suspect -->
    <Button
        android:id="@+id/choose_suspect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_suspect"
        app:layout_constraintTop_toBottomOf="@id/share_report"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Call suspect -->
    <Button
        android:id="@+id/call_suspect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/call_suspect"
        app:layout_constraintTop_toBottomOf="@id/choose_suspect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>